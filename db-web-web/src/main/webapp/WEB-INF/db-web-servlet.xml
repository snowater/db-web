<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:mvc="http://www.springframework.org/schema/mvc"
    xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.2.xsd
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd">

    <!-- 基本的Controller -->
    <bean id="normal" class="com.snow.db.web.web.abst.NormalController"></bean>
    <bean id="simpleUrlHandlerMapping"
        class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="urlMap">
            <map>
                <entry key="/index.html" value-ref="normal"/>
                <entry key="/common/404.html" value-ref="normal"/>
                <entry key="/common/500.html" value-ref="normal"/>
                <entry key="/modules/student/student.html" value-ref="normal" />
            </map>
        </property>
    </bean>

    <context:annotation-config />
    <context:component-scan base-package="com.snow.db.web.web" use-default-filters="false">
        <context:include-filter type="annotation" expression="org.springframework.stereotype.Controller" />
    </context:component-scan>
    
    <mvc:annotation-driven />
    <mvc:view-controller path="/db-web-web/" view-name="/index"/>
</beans>


